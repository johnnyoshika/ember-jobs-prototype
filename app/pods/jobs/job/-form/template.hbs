<form class="form-horizontal relative" role="form" {{action "save" on="submit" }}>
    <div class="form-group">
        <label class="col-sm-3 control-label">Title</label>
        <div class="col-sm-9">
            {{input class="form-control" value=model.title autofocus="autofocus" required="required"}}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
            <button type="submit" class="btn btn-danger">Submit</button>
        </div>
    </div>
</form>